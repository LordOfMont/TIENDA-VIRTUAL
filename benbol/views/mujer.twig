      <div class="tab-pane fade show active text-center" id="uno" role="tabpanel" aria-labelledby="list-uno-list">
        <h2>Chaquetas de Punto y Jerseis</h2>
        <div class="container">
          <div class="row">
          {% for product in products %}
          {% if product.activo==1 %}
          {% if product.categoria==16 %}
          <div class="col-4 text-center">
            <div class="card text-center" style="width: 18rem;">
              <img src="uploads/{{product.imagen}}" width="300" >
              <div class="card-body">
              <h5 class="card-title">{{product.nombre}}</h5>
              <p class="card-text">{{product.detalle}}</p>
              <p class="card-text">Precio Bs.- {{product.precio}}</p>
              <form action="/benbol/addcarrito/{{product.idProducto}}" method="post">
               <label class="campo-ben my-1 mr-2" for="tallas">Talla</label>
                   <select name="tallas" class="custom-select my-1 mr-sm-2" id="tallas">
                      <option value="7">S</option>
                      <option value="8">M</option>
                      <option value="9">L</option>
                      <option value="10">XL</option>
                    </select>
                 <button type="submit" class="rounded btn btn-ben">AÑADIR A CARRITO</button>
