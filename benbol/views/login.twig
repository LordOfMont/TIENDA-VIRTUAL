{% extends "layoutvisitor.twig" %}
{% block main %}
     <main id="main">
       {% if responseMessage %}
        <div class="alert alert-info mb-0" role="alert">
          {{ responseMessage }}
        </div>
       {% endif %}
      <div class="container pt-4"> 
          <div class="row pt-4">
              <div class="col-md-6 offset-md-3 pt-4"> 
                <h1 class="text-center text-uppercase">INGRESAR</h1>
                <form action="/benbol/login" method="post">
                  <div class="form-group">
                    <input type="email" class="form-control campo-ben rounded" name="email" aria-describedby="emailHelp" placeholder="Correo Electrónico" required>
                    <small id="emailHelp" class="form-text text-muted">No compartiremos jamás tu correo con nadie</small>
                  </div>
                  <div class="form-group">
                    <input type="password" class="form-control campo-ben rounded" name="password" placeholder="Contraseña" required>
                  </div>
                  <button type="submit" class="rounded btn btn-ben">ACCEDER</button>
                </form>
              </div> 
              <div class="col-md-6 offset-md-3 pt-1">
                <small>¿No tienes una cuenta?</small>
                <br>
                <a href="/benbol/register"><button class="mt-1 rounded btn btn-ben">REGISTRARME</button></a>
              </div>
          </div>
      </div>
    </main>   
{% endblock %}
  