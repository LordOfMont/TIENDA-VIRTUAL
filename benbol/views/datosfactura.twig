{% extends "layoutseller.twig" %}
{% block main %}
    <main id="main">
       <div class="container-fluid text-center">
          <h2>DETALLE DE LA COMPRA</h2>
          <table class="table col-8 offset-2">
            <thead>
              <tr>
                <th scope="col">Producto</th>
                <th scope="col">Precio</th>
                <th scope="col">Talla</th>
                <th scope="col">Cantidad</th>
                <th scope="col">Sub Total</th>
              </tr>
            </thead>
            <tbody>
              {% for product in products %}
                <tr>
                  <td>{{product.producto}}</td>
                  <td>{{product.precio}}</td>
                  <td>{{product.tallap}}</td>
                  <td>{{product.cantidad}}</td>
                  <td>{{product.subt}}</td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
          <h3>TOTAL: Bs.- {{total}}</h3>
          
        <form action="/benbol/factura/{{codigo}}" method="post" class="col-4 offset-4">
          <div class="form-group">
          <input type="text" class="form-control campo-ben rounded" name="nombre" placeholder="NOMBRE" required>
          </div>   
          <div class="form-group"> 
          <input type="text" class="form-control campo-ben rounded" name="nit" placeholder="NIT/CI" required>
          </div>   
          <button type="submit" class="rounded btn btn-ben">FACTURAR</button>
        </form>
        </div>
    </main>   
{% endblock %}
  