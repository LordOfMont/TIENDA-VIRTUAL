{% extends "layoutvisitor.twig" %}
{% block main %}
<main id="main">
      {% if responseMessage %}
        <div class="alert alert-info mb-0" role="alert">
          {{ responseMessage }}
        </div>
      {% endif %}

      <div class="container pt-4"> 
          <div class="row pt-4">
              <div class="col-md-6 offset-md-3 pt-4 text-center"> 
                <h1 class="text-center text-uppercase">REGISTRO</h1>
                <form action="/benbol/register" method="post">
                  <div class="form-group">
                    <input type="text" class="form-control campo-ben rounded" name="name" placeholder="Nombre y apellido" required>
                  </div>
                  <div class="form-group">
                    <input type="email" class="form-control campo-ben rounded" name="email" aria-describedby="emailHelp" placeholder="Correo Electr칩nico" required>
                  </div>
                  <div class="form-group">
                    <input type="password" class="form-control campo-ben rounded" name="password" placeholder="Contrase침a" required>
                  </div>
                  <div class="form-group">
                    <input type="password" class="form-control campo-ben rounded" name="password2" placeholder="Repita su Contrase침a" required>
                  </div>
                  <div class="form-group">
                    <input type="text" class="form-control campo-ben rounded" name="direccion" placeholder="Direcci칩n" required>
                  </div>
                  <div class="form-check mb-4">
                    <input class="form-check-input" type="radio" name="genre" id="masculino" value="masculino" checked>
                    <label class="form-check-label mr-4" for="masculino">
                      Masculino
                    </label>
                    <input class="form-check-input" type="radio" name="genre" id="femenino" value="femenino">
                    <label class="form-check-label" for="femenino">
                      Femenino
                    </label>
                  </div>
                  <button type="submit" class="rounded btn btn-ben">REGISTRARME</button>
                </form>
              </div> 
          </div>
      </div>
    </main>   
{% endblock %}
  