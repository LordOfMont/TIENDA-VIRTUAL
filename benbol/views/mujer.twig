{% block main %}
<main id="main">
{% if error %}
  <div class="alert alert-info mb-0" role="alert">
      {{ error }}
  </div>
{% endif %}
<div class="row mt-1 mb-0">
  <div class="col-2 list-ben" id="menu-ben">
    <div class="list-group" id="list-tab" role="tablist">
      <a class="list-group-item list-group-item-action active" id="list-uno-list" data-toggle="list" href="#uno" role="tab" aria-controls="uno">Chaquetas de punto y jerseis</a>
      <a class="list-group-item list-group-item-action" id="list-dos-list" data-toggle="list" href="#dos" role="tab" aria-controls="dos">Chaquetas y Abrigos</a>
