{% extends "layoutadmin.twig" %}
{% block main %}
<main id="main">
  <div class="row mt-1 mb-0">
  <div class="col-2 list-ben" id="menu-ben">
    <div class="list-group" id="list-tab" role="tablist">
      <a class="list-group-item list-group-item-action active" id="list-add-list" data-toggle="list" href="#add" role="tab" aria-controls="add">Añadir Cajero</a>
      <a class="list-group-item list-group-item-action" id="list-delete-list" data-toggle="list" href="#delete" role="tab" aria-controls="delete">Borrar Cajero</a>
    </div>
  </div>
  <div class="col-10">
    <div class="tab-content" id="nav-tabContent">
      <div class="tab-pane fade show active text-center" id="add" role="tabpanel" aria-labelledby="list-add-list">
          <h2>AÑADIR CAJERO</h2>
          <form class="col-4 offset-4" action="/benbol/addcajero" method="post">
                  <div class="form-group">
                    <input type="text" class="form-control campo-ben rounded" name="name" placeholder="Nombre y apellido" required>
                  </div>
                  <div class="form-group">
                    <input type="email" class="form-control campo-ben rounded" name="email" aria-describedby="emailHelp" placeholder="Correo Electrónico" required>
                  </div>
                  <div class="form-group">
                    <input type="password" class="form-control campo-ben rounded" name="password" placeholder="Contraseña" required>
                  </div>
                  <button type="submit" class="rounded btn btn-ben">REGISTRARME</button>
                </form>
      </div>
      <div class="tab-pane fade text-center" id="delete" role="tabpanel" aria-labelledby="list-delete-list">
        <h2>BORRAR CAJERO</h2>
         <ul class="container">
            {% for cajero in cajeros %}
            {% if cajero.tipo == 2 %}
            {% if cajero.activo == 1 %}
            <li class="list-group-item d-flex align-items-center">
                Nombre: {{cajero.nombre}} &nbsp;&nbsp;&nbsp;
                Usuario:{{cajero.correo}} &nbsp;&nbsp;&nbsp;
                
                <a href="/benbol/deletecajero/{{ cajero.idUsuario }}" ><i class="fas fa-trash-alt" style="color:red;" ></i></a>
                
                
            </li>
          {% endif %}
          {% endif %}
            {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</div>    
</main> 
{% endblock %}
  